public class ConnectionClass {
	Connection connection;
	username = "root";
	password = "root";
	db_name = " tasks";

	
	public void openConnection() {
		
	}
	
	public String closeConnection() {
		try{
			connection.close();
			
		}catch(SQLException e) {
			System.out.println("erreur lors de la fermeture de ressource ! " + e.getMessage());
		}
	}
	

}
